  <script>
    // Idiomas suportados
    const LANGS = [
      { btn: "btn-ptbr", section: "sec-ptbr", code: "ptbr", htmlLang: "pt-br" },
      { btn: "btn-enus", section: "sec-enus", code: "enus", htmlLang: "en" },
      { btn: "btn-eses", section: "sec-eses", code: "eses", htmlLang: "es" },
      { btn: "btn-frfr", section: "sec-frfr", code: "frfr", htmlLang: "fr" },
      { btn: "btn-itit", section: "sec-itit", code: "itit", htmlLang: "it" },
      { btn: "btn-dede", section: "sec-dede", code: "dede", htmlLang: "de" }
    ];
    let CURRENT_LANG = LANGS[0].code;

    // TraduÃ§Ãµes simples do cabeÃ§alho
    const HEADER_T = {
      ptbr: "Desenvolvedor de Software â€¢ Python â€¢ C++ â€¢ GUI",
      enus: "Software Developer â€¢ Python â€¢ C++ â€¢ GUI",
      eses: "Desarrollador de Software â€¢ Python â€¢ C++ â€¢ GUI",
      frfr: "DÃ©veloppeur Logiciel â€¢ Python â€¢ C++ â€¢ GUI",
      itit: "Sviluppatore Software â€¢ Python â€¢ C++ â€¢ GUI",
      dede: "Softwareentwickler â€¢ Python â€¢ C++ â€¢ GUI"
    };

    // Badge "last commit" traduzido
    const BADGE_LAST_COMMIT = {
      ptbr: { label:"EstatÃ­sticas%20atualizadas%20em", alt:"EstatÃ­sticas atualizadas em" },
      enus: { label:"Statistics%20updated%20on", alt:"Statistics updated on" },
      eses: { label:"EstadÃ­sticas%20actualizadas%20en", alt:"EstadÃ­sticas atualizadas en" },
      frfr: { label:"Statistiques%20mises%20%C3%A0%20jour%20le", alt:"Statistiques mises Ã  jour le" },
      itit: { label:"Statistiche%20aggiornate%20al", alt:"Statistiche aggiornate al" },
      dede: { label:"Statistiken%20aktualisiert%20am", alt:"Statistiken aktualisiert am" }
    };

    // Locales para imagens de estatÃ­sticas
    const LOCALES = {
      ptbr: { stats:"pt-br", streak:"pt_BR", graph:"pt-br", langs:"pt-br" },
      enus: { stats:"en",    streak:"en",    graph:"en",    langs:"en" },
      eses: { stats:"es",    streak:"es",    graph:"es",    langs:"es" },
      frfr: { stats:"fr",    streak:"fr",    graph:"fr",    langs:"fr" },
      itit: { stats:"it",    streak:"it",    graph:"it",    langs:"it" },
      dede: { stats:"de",    streak:"de",    graph:"de",    langs:"de" }
    };

    // TraduÃ§Ã£o do botÃ£o da aba de projetos
    const PROJECTS_T = {
      ptbr: "ğŸ“‚ Projetos/RepositÃ³rios",
      enus: "ğŸ“‚ Projects/Repositories",
      eses: "ğŸ“‚ Proyectos/Repositorios",
      frfr: "ğŸ“‚ Projets/DÃ©pÃ´ts",
      itit: "ğŸ“‚ Progetti/Repository",
      dede: "ğŸ“‚ Projekte/Repositories"
    };

    // Textos da seÃ§Ã£o de projetos
    const PROJECTS_NOTE_T = {
      ptbr: "Lista de projetos e repositÃ³rios pÃºblicos de fernandoncidade.",
      enus: "List of public projects and repositories by fernandoncidade.",
      eses: "Lista de proyectos y repositorios pÃºblicos de fernandoncidade.",
      frfr: "Liste des projets et dÃ©pÃ´ts publics de fernandoncidade.",
      itit: "Elenco dei progetti e repository pubblici di fernandoncidade.",
      dede: "Liste Ã¶ffentlicher Projekte und Repositories von fernandoncidade."
    };

    const PROJECTS_CTA_T = {
      ptbr: "Abrir repositÃ³rio",
      enus: "Open repository",
      eses: "Abrir repositorio",
      frfr: "Ouvrir le dÃ©pÃ´t",
      itit: "Apri repository",
      dede: "Repository Ã¶ffnen"
    };

    function activateLang(idObj) {
      LANGS.forEach(l => {
        document.getElementById(l.section).classList.remove('active');
        document.getElementById(l.btn).classList.remove('active');
      });
      // Esconde a aba de projetos ao trocar de idioma
      const projSec = document.getElementById('sec-projects');
      if (projSec) projSec.classList.remove('active');
      const projBtn = document.getElementById('btn-projects');
      if (projBtn) projBtn.classList.remove('active');

      document.getElementById(idObj.section).classList.add('active');
      document.getElementById(idObj.btn).classList.add('active');
      document.documentElement.lang = idObj.htmlLang;
      CURRENT_LANG = idObj.code;

      updateHeaderTagline();
      updateLastCommitBadge();
      updateStatsLocale();
      updateProjectsTabLabel();
      updateProjectsSectionTexts();

      const top = document.querySelector('.languages');
      if (top) window.scrollTo({ top: top.offsetTop - 16, behavior: 'smooth' });
    }

    function updateHeaderTagline() {
      const t = HEADER_T[CURRENT_LANG] || HEADER_T.ptbr;
      const el = document.getElementById('tagline');
      if (el) el.innerText = t;
    }

    function updateLastCommitBadge() {
      const info = BADGE_LAST_COMMIT[CURRENT_LANG] || BADGE_LAST_COMMIT.ptbr;
      const img = document.getElementById('badge-last-commit');
      if (!img) return;
      img.src = "https://img.shields.io/github/last-commit/fernandoncidade/fernandoncidade?label=" + info.label + "&style=flat-square";
      img.alt = info.alt;
    }

    function updateStatsLocale() {
      const l = LOCALES[CURRENT_LANG] || LOCALES.ptbr;
      const section = document.querySelector('.lang-section.active');
      if (!section) return;

      // Detecta tema atual para ajustar os temas dos widgets
      const isDark = document.body.classList.contains('dark') || (localStorage.getItem('fcc_theme') === 'dark');

      const stats = section.querySelector('.gh-stats');
      if (stats) {
        const statsTheme = isDark ? 'blue-green' : 'flag-india';
        stats.src = `https://github-readme-stats.vercel.app/api?username=fernandoncidade&theme=${statsTheme}&show_icons=True&locale=${l.stats}`;
      }

      const streak = section.querySelector('.gh-streak');
      if (streak) {
        const streakTheme = isDark ? 'microsoft-dark' : 'ayu-light';
        streak.src = `https://streak-stats.demolab.com?user=fernandoncidade&theme=${streakTheme}&locale=${l.streak}&date_format=j%20M%5B%20Y%5D`;
      }

      const graph = section.querySelector('.gh-activity');
      const titles = {
        ptbr: "GrÃ¡fico%20de%20Atividade%20de%20fernandoncidade",
        enus: "fernandoncidade's%20Activity%20Graph",
        eses: "GrÃ¡fico%20de%20Actividad%20de%20fernandoncidade",
        frfr: "Graphique%20d'activitÃ©%20de%20fernandoncidade",
        itit: "Grafico%20di%20AttivitÃ %20di%20fernandoncidade",
        dede: "AktivitÃ¤tsdiagramm%20von%20fernandoncidade"
      };
      if (graph) {
        const graphTheme = isDark ? 'merko' : 'minimal';
        graph.src =
          `https://github-readme-activity-graph.vercel.app/graph?username=fernandoncidade&theme=${graphTheme}&area=true&custom_title=${titles[CURRENT_LANG] || titles.ptbr}&locale=${l.graph}`;
      }

      const langs = section.querySelector('.top-langs');
      if (langs) {
        const langsTheme = isDark ? 'merko' : 'default';
        langs.src =
          `https://beautiful-github-homepage.vercel.app/api/top-langs/?username=fernandoncidade&layout=compact&theme=${langsTheme}&locale=${l.langs}`;
      }
    }

    // Atualiza o rÃ³tulo do botÃ£o de projetos conforme o idioma atual
    function updateProjectsTabLabel() {
      const btn = document.getElementById('btn-projects');
      if (!btn) return;
      const t = PROJECTS_T[CURRENT_LANG] || PROJECTS_T.ptbr;
      btn.textContent = t;
      btn.title = t.replace("ğŸ“‚ ", "");
    }

    // Atualiza textos da seÃ§Ã£o de projetos (nota e CTAs)
    function updateProjectsSectionTexts() {
      const sec = document.getElementById('sec-projects');
      if (!sec) return;
      const note = sec.querySelector('.note');
      if (note) note.textContent = PROJECTS_NOTE_T[CURRENT_LANG] || PROJECTS_NOTE_T.ptbr;

      const ctas = sec.querySelectorAll('a.cta');
      const label = PROJECTS_CTA_T[CURRENT_LANG] || PROJECTS_CTA_T.ptbr;
      ctas.forEach(a => { a.textContent = label; });
    }

    // Nova funÃ§Ã£o: mostrar aba de projetos
    function showProjects() {
      // Desativa todas as seÃ§Ãµes/btns de idioma
      LANGS.forEach(l => {
        const sec = document.getElementById(l.section);
        const btn = document.getElementById(l.btn);
        if (sec) sec.classList.remove('active');
        if (btn) btn.classList.remove('active');
      });
      // Ativa a seÃ§Ã£o de projetos
      const projSec = document.getElementById('sec-projects');
      const projBtn = document.getElementById('btn-projects');
      if (projSec) projSec.classList.add('active');
      if (projBtn) projBtn.classList.add('active');

      updateProjectsTabLabel();      // garante rÃ³tulo do botÃ£o correto
      updateProjectsSectionTexts();  // traduz nota e CTAs

      const top = document.querySelector('.languages');
      if (top) window.scrollTo({ top: top.offsetTop - 16, behavior: 'smooth' });
    }

    window.addEventListener('DOMContentLoaded', () => {
      // listeners dos botÃµes
      LANGS.forEach(l => {
        const b = document.getElementById(l.btn);
        if (b) b.addEventListener('click', () => activateLang(l));
      });
      // listener da aba de projetos
      const pb = document.getElementById('btn-projects');
      if (pb) pb.addEventListener('click', showProjects);

      // ativar padrÃ£o
      activateLang(LANGS[0]);
    });
  </script>
