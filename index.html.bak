    /* Tema escuro: subtÃ³picos (PT-BR) de Principais Projetos e Dashboards */
    body.dark #sec-enus ul.subtopics,
    body.dark #sec-enus ul.subtopics li,
    body.dark #sec-enus ul.subtopics a{
      color:#e9f2ff;
    }
    body.dark #sec-enus ul.subtopics a:hover{
      color:#d6fff6;
    }

    /* Tema escuro: subtÃ³picos (PT-BR) de Principais Projetos e Dashboards */
    body.dark #sec-eses ul.subtopics,
    body.dark #sec-eses ul.subtopics li,
    body.dark #sec-eses ul.subtopics a{
      color:#e9f2ff;
    }
    body.dark #sec-eses ul.subtopics a:hover{
      color:#d6fff6;
    }

    /* Tema escuro: subtÃ³picos (PT-BR) de Principais Projetos e Dashboards */
    body.dark #sec-frfr ul.subtopics,
    body.dark #sec-frfr ul.subtopics li,
    body.dark #sec-frfr ul.subtopics a{
      color:#e9f2ff;
    }
    body.dark #sec-frfr ul.subtopics a:hover{
      color:#d6fff6;
    }

    /* Tema escuro: subtÃ³picos (PT-BR) de Principais Projetos e Dashboards */
    body.dark #sec-itit ul.subtopics,
    body.dark #sec-itit ul.subtopics li,
    body.dark #sec-itit ul.subtopics a{
      color:#e9f2ff;
    }
    body.dark #sec-itit ul.subtopics a:hover{
      color:#d6fff6;
    }

    /* Tema escuro: subtÃ³picos (PT-BR) de Principais Projetos e Dashboards */
    body.dark #sec-dede ul.subtopics,
    body.dark #sec-dede ul.subtopics li,
    body.dark #sec-dede ul.subtopics a{
      color:#e9f2ff;
    }
    body.dark #sec-dede ul.subtopics a:hover{
