    }

    /* Tema escuro: rÃ³tulos dos botÃµes da sessÃ£o "Contato" (todas as lÃ­nguas) */
    body.dark .lang-section .header-links a{
      color:#e9f2ff;
    }
    body.dark .lang-section .header-links a:hover{
      color:#d6fff6;
    }

    /* Tema escuro: rÃ³tulos dos botÃµes do topo (GitHub, LinkedIn, Lattes, Instagram, ORCID) */
    body.dark .header .header-links a{
      color:#e9f2ff;
    }
    body.dark .header .header-links a:hover{
      color:#d6fff6;
    }

    /* Tema claro: botÃµes "Contato" iguais aos botÃµes de idiomas */
    body:not(.dark) .lang-section .header-links a{
      background:#f3f7fb;
      color:#223;
      border:1px solid var(--border);
      border-radius:999px;
      padding:.45em .9em;
      font-size:1rem;
      box-shadow:0 1px 4px #0000000a;
      text-decoration:none;
    }
    body:not(.dark) .lang-section .header-links a:hover{
      text-decoration:none; /* evita sublinhado no hover */
    }

    /* Hover (tema claro) â€” igual aos botÃµes de idiomas */
    body:not(.dark) .languages button:hover,
    body:not(.dark) .lang-section .header-links a:hover,
    body:not(.dark) .header .header-links a:hover{
      border-color:var(--accent);
      background:#e6fffa;
      color:#0c3b40;
      text-decoration:none;
    }

    /* Hover (tema escuro) â€” igual aos botÃµes de idiomas */
    body.dark .languages button:hover,
    body.dark .lang-section .header-links a:hover,
    body.dark .header .header-links a:hover{
      color:#d6fff6;
      border-color:#1abc9c;
