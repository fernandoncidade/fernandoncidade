    /* ===== DinÃ¢mica/UX extra ===== */
    :root {
      --bg-dark:#0b1220; --text-dark:#e9f2ff;
      --card-dark:#0f1829; --border-dark:#1f2b42;
      --pill-dark:#0e1c2e; --link:#0f8bff;
    }
    html, body { scroll-behavior:smooth }
    body { transition: background-color .25s ease, color .25s ease }
    body.dark{
      background:var(--bg-dark); color:var(--text-dark)
    }
    body.dark .container{ background:#0d1526; border-color:var(--border-dark) }
    body.dark .card{ background:var(--card-dark); border-color:var(--border-dark) }
    body.dark .languages button{ background:var(--pill-dark); color:var(--text-dark); border-color:var(--border-dark) }
    body.dark a{ color:#2c3e50 }
    body.dark .note{ background:#0f2a24; border-left-color:#1abc9c }
    body.dark .lang-section{
      background:#0d1526;           /* mesmo tom do container no dark */
      border-color:var(--border-dark);
    }
    /* Opcional: suaviza os cards no dark para menos â€œrecorteâ€ */
    body.dark .card{
      background:#0f1829;
      border-color:var(--border-dark);
      box-shadow:0 2px 10px #00000055; /* sombra um pouco mais visÃ­vel no dark */
    }

    /* Sticky barra de idiomas com blur */
    .languages{
      position:sticky; top:0; z-index:10;
      -webkit-backdrop-filter: saturate(140%) blur(6px); /* adicionado para Safari */
      backdrop-filter:saturate(140%) blur(6px);
      background:rgba(255,255,255,.65);
      border-radius:12px; padding:.6rem .6rem;
    }
    body.dark .languages{ background:rgba(13,21,38,.55) }

    /* BotÃ£o voltar ao topo */
    .btn-top{
      position:fixed; right:16px; bottom:18px; z-index:20;
      width:42px; height:42px; border-radius:999px; border:1px solid var(--border);
      background:#0f8bff; color:#fff; cursor:pointer; box-shadow:0 6px 18px #00000033;
      display:none; align-items:center; justify-content:center; font-size:18px
    }
    .btn-top.show{ display:flex }

    /* AnimaÃ§Ã£o revelar ao rolar */
    .reveal{ opacity:0; transform:translateY(12px); transition:opacity .6s ease, transform .6s ease }
    .reveal.in{ opacity:1; transform:none }

    /* Ripple simples nos botÃµes */
    .languages button, .cta{ position:relative; overflow:hidden }
    .ripple{
      position:absolute; border-radius:50%; transform:scale(0);
      background:rgba(255,255,255,.35); animation:ripple .6s ease-out;
      pointer-events:none;
    }
    @keyframes ripple{ to{ transform:scale(12); opacity:0 } }

    /* Toast */
    .toast{
      position:fixed; top:14px; right:14px; z-index:30;
      background:#111827; color:#e5e7eb; padding:.55rem .8rem; border-radius:8px;
      box-shadow:0 8px 24px #00000055; display:none; font-size:.95rem
    }
    .toast.show{ display:block; animation:fade .25s ease }

    /* Acessibilidade: reduzir movimento */
    @media (prefers-reduced-motion: reduce){
      *{ animation:none!important; transition:none!important }
    }

    /* Tema escuro: cores dos rÃ³tulos/estados dos botÃµes de idioma */
    body.dark .languages button{
      color:#e9f2ff;                  /* texto claro */
      border-color:var(--border-dark);
