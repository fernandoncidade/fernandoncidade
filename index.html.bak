  <!-- Toast e botÃ£o topo -->
  <div id="toast" class="toast" role="status" aria-live="polite"></div>
  <button id="btn-top" class="btn-top" title="Voltar ao topo">â†‘</button>

  <script>
    /* ...existing code... */

    // ===== UX extra: tema, reveal, ripple, atalhos, topo, lazy =====
    const THEME_KEY = 'fcc_theme';
    function toast(msg, ms=1400){
      const t = document.getElementById('toast'); if(!t) return;
      t.textContent = msg; t.classList.add('show');
      clearTimeout(t.__tid); t.__tid = setTimeout(()=>t.classList.remove('show'), ms);
    }
    function applyTheme(theme){
      document.body.classList.toggle('dark', theme === 'dark');
      // Opcional: ajustar sombra/cores com o tema aqui
    }
    function toggleTheme(){
      const cur = localStorage.getItem(THEME_KEY) || 'light';
      const next = cur === 'light' ? 'dark' : 'light';
      localStorage.setItem(THEME_KEY, next);
      applyTheme(next);
      toast(`Tema: ${next === 'dark' ? 'escuro' : 'claro'}`);
      updateStatsLocale(); // atualiza Top Langs conforme o tema
    }

    // SeguranÃ§a: adiciona rel="noopener noreferrer" a links que abrem em nova aba
    function secureExternalLinks(){
      document.querySelectorAll('a[target="_blank"]').forEach(a=>{
        let rel = (a.getAttribute('rel') || '').trim();
        if(!/\bnoopener\b/.test(rel)) rel = (rel + ' noopener').trim();
        if(!/\bnoreferrer\b/.test(rel)) rel = (rel + ' noreferrer').trim();
        a.setAttribute('rel', rel);
      });
    }

    // Ripple em cliques
    function attachRipple(el){
      el.addEventListener('pointerdown', e=>{
        const r = document.createElement('span'); r.className='ripple';
        const rect = el.getBoundingClientRect();
        const size = Math.max(rect.width, rect.height);
        r.style.width = r.style.height = size+'px';
        r.style.left = (e.clientX - rect.left - size/2)+'px';
        r.style.top  = (e.clientY - rect.top  - size/2)+'px';
        el.appendChild(r);
        setTimeout(()=>r.remove(), 600);
      });
    }

    // Revelar ao rolar
    function setupReveal(){
      const els = document.querySelectorAll('.card, .stats img, .screenshots img');
      els.forEach(el => el.classList.add('reveal'));
      const io = new IntersectionObserver((entries)=>{

        entries.forEach(ent=>{
          if(ent.isIntersecting){ ent.target.classList.add('in'); io.unobserve(ent.target); }
        });
      }, { threshold:.12, rootMargin:'0px 0px -10% 0px' });
      els.forEach(el=>io.observe(el));
    }

    // Lazy e decoding em imagens
    function setupImagesPerf(){
      document.querySelectorAll('img').forEach(img=>{
        if(!img.hasAttribute('loading')) img.setAttribute('loading','lazy');
        img.setAttribute('decoding','async');
      });
    }

    // Atalhos de teclado
    function setupShortcuts(){
      const map = {
        '1':0,'2':1,'3':2,'4':3,'5':4,'6':5
      };
      window.addEventListener('keydown', (e)=>{
        if(e.altKey && map[e.key] !== undefined){
          e.preventDefault(); activateLang(LANGS[map[e.key]]);
          toast('Idioma alterado');
        }else if(e.altKey && (e.key==='p' || e.key==='P')){
          e.preventDefault(); showProjects(); toast('Aba de projetos');
        }else if(e.altKey && (e.key==='t' || e.key==='T')){
          e.preventDefault(); toggleTheme();
        }else if(e.key === 'Home'){
          window.scrollTo({top:0, behavior:'smooth'});
        }
      });
    }

    // BotÃ£o voltar ao topo
    function setupBackToTop(){
      const btn = document.getElementById('btn-top');
      if(!btn) return;
      btn.addEventListener('click', ()=>window.scrollTo({top:0, behavior:'smooth'}));
      window.addEventListener('scroll', ()=>{
        const y = window.scrollY || document.documentElement.scrollTop;
        if(y > 320) btn.classList.add('show'); else btn.classList.remove('show');
      });
    }

    // Enriquecer tÃ­tulos com atalhos
    function setupHints(){
      const hints = ['Alt+1','Alt+2','Alt+3','Alt+4','Alt+5','Alt+6'];
      LANGS.forEach((l, i)=>{
        const b = document.getElementById(l.btn);
        if(b && !b.title) b.title = `Trocar idioma (${hints[i]})`;
      });
      const pb = document.getElementById('btn-projects');
      if(pb && !pb.title) pb.title = 'Abrir aba de projetos (Alt+P)';
    }

    // Hook nos listeners existentes ao carregar
    window.addEventListener('DOMContentLoaded', () => {
      // Tema inicial
      applyTheme(localStorage.getItem(THEME_KEY) || 'light');
      updateStatsLocale(); // ajusta Top Langs ao tema aplicado

      // Ripple nos botÃµes e CTAs
      document.querySelectorAll('.languages button, a.cta').forEach(attachRipple);

      // OtimizaÃ§Ãµes e efeitos
      setupImagesPerf();
      setupReveal();
      setupShortcuts();
      setupBackToTop();
      setupHints();

      // BotÃ£o de tema
      const tb = document.getElementById('btn-theme');
      if(tb) tb.addEventListener('click', toggleTheme);

      // Acrescenta toasts aos botÃµes de idioma/projetos
      LANGS.forEach(l=>{
        const b = document.getElementById(l.btn);
        if(b){
          b.addEventListener('click', ()=> toast('Idioma alterado'));
        }
      });
      const pb = document.getElementById('btn-projects');
      if(pb){ pb.addEventListener('click', ()=> toast('Aba de projetos')); }

      // SeguranÃ§a: corrige links com target="_blank"
      secureExternalLinks();
    });
  </script>
